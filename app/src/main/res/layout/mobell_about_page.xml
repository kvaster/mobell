                style="@style/mobell_about_image" />

            <TextView
                android:id="@+id/description"
                style="@style/mobell_about_description" />
        </LinearLayout>

        <View style="@style/mobell_about_separator" />

        <LinearLayout
            android:id="@+id/about_providers"
            style="@style/mobell_about_sub_wrapper"
            android:padding="0dp">

        </LinearLayout>
    </LinearLayout>
</ScrollView>